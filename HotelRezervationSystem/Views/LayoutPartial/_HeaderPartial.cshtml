<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Grand Hotels</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/grand_hotel-main/style.css">
    <style>
        :root {
            --primary-color: #1a1a1a;
            --secondary-color: #e67e22;
            --white: #ffffff;
            --light-gray: #f5f5f5;
            --dark-gray: #333;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }
        /* Hero Section */
        .hero {
            height: 100vh;
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1542314831-068cd1dbfeeb?ixlib=rb-4.0.3');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--white);
            text-align: center;
        }

        .search-container {
            background: var(--white);
            padding: 30px;
            border-radius: 10px;
            width: 80%;
            max-width: 1000px;
        }

        .search-form {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .search-input {
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .search-button {
            background: var(--secondary-color);
            color: var(--white);
            border: none;
            padding: 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        /* Featured Hotels Section */
        .featured-hotels {
            padding: 80px 0;
            background: var(--light-gray);
        }

        .section-title {
            text-align: center;
            margin-bottom: 50px;
        }

        .hotels-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .hotel-card {
            background: var(--white);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

            .hotel-card:hover {
                transform: translateY(-10px);
            }

        .hotel-image {
            height: 200px;
            width: 100%;
            object-fit: cover;
        }

        .hotel-info {
            padding: 20px;
        }

        .hotel-name {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .hotel-location {
            color: #666;
            margin-bottom: 15px;
        }

        .hotel-rating {
            color: var(--secondary-color);
            margin-bottom: 15px;
        }

        .hotel-price {
            font-size: 1.2rem;
            font-weight: bold;
            color: var(--primary-color);
        }

        /* Locations Section */
        .locations {
            padding: 80px 0;
        }

        .location-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .location-card {
            position: relative;
            height: 300px;
            border-radius: 10px;
            overflow: hidden;
            cursor: pointer;
        }

        .location-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .location-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 20px;
            background: linear-gradient(transparent, rgba(0,0,0,0.8));
            color: var(--white);
        }

    </style>
</head>