
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Grand Hotels</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <div class="d-flex" id="wrapper">

        <div class="bg-info text-white p-3" id="sidebar" style="width: 300px; min-height: 100vh;">
            <h4 class="text-center border-bottom pb-2">Admin Panel</h4>
            <ul class="list-unstyled">
                <li>
                    <a href="/AdminDashboard" class="btn btn-info w-100 text-start py-3 mb-2">
                        <i class="bi bi-house"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="/AdminRooms" class="btn btn-info w-100 text-start py-3 mb-2">
                        <i class="bi bi-door-open"></i> Rooms
                    </a>
                </li>
                <li>
                    <a href="/AdminCustomers" class="btn btn-info w-100 text-start py-3 mb-2">
                        <i class="bi bi-person-circle"></i> Customers
                    </a>
                </li>
                <li>
                    <a href="/AdminBookings" class="btn btn-info w-100 text-start py-3 mb-2">
                        <i class="bi bi-calendar-check"></i> Bookings
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-info w-100 text-start py-3 mb-2">
                        <i class="bi bi-door-closed"></i> Logout
                    </a>
                </li>
            </ul>
        </div>


        <div id="page-content-wrapper" class="w-100">

            <nav class="navbar navbar-expand-lg navbar-light bg-info-subtle">
                <div class="container-fluid">
                    <button class="btn btn-info" id="menu-toggle">☰</button>
                    <span class="navbar-text ms-auto">
                        Welcome, Admin!
                    </span>
                </div>
            </nav>

            <div class="container mt-4">

                @RenderBody()

            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("sidebar").classList.toggle("d-none");
        });
    </script>
</body>

</html>