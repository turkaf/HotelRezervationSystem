@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 fw-bold text-info">Dashboard</h2>

<div class="row">
    <!-- Total Rooms Card -->
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-3 text-white bg-info h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Total Rooms</span>
                <i class="bi bi-house-door" style="font-size: 1.5rem;"></i>
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title display-4 fw-bold">@ViewData["TotalRooms"]</h5>
                <p class="card-text">The total number of rooms registered in the system.</p>
            </div>
        </div>
    </div>

    <!-- Total Customers Card -->
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-3 text-white bg-secondary h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Total Customers</span>
                <i class="bi bi-person-fill" style="font-size: 1.5rem;"></i>
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title display-4 fw-bold">@ViewData["TotalCustomers"]</h5>
                <p class="card-text">The total number of customers in your system.</p>
            </div>
        </div>
    </div>

    <!-- Total Bookings Card -->
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-3 text-white bg-warning h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Total Bookings</span>
                <i class="bi bi-calendar-check" style="font-size: 1.5rem;"></i>
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title display-4 fw-bold">10</h5>
                <p class="card-text">The total number of bookings made.</p>
            </div>
        </div>
    </div>
</div>
